{{- $c := .themes.kanagawa.dragon -}}
/* Kanagawa Dragon Theme - Ultra-thin Waybar */
/* Colors sourced from ~/.chezmoidata/colors.yaml */

* {
    font-family: "JetBrains Mono", "Fira Code", "Source Code Pro", monospace;
    font-size: 18px;
    font-weight: 500;
    border: none;
    border-radius: 0;
    min-height: 0;
}

window#waybar {
    background-color: {{ template "color-hex.tmpl" $c.bg_dark }};
    color: {{ template "color-hex.tmpl" $c.fg_primary }};
}

/* All modules default styling */
#window,
#battery,
#backlight,
#disk,
#custom-disk0,
#custom-disk1,
#bluetooth,
#network,
#cpu,
#memory,
#pulseaudio,
#custom-weather,
#custom-vpn,
#clock {
    padding: 0 8px;
    margin: 0;
    background-color: transparent;
    color: {{ template "color-hex.tmpl" $c.fg_primary }};
}

/* Unified Spectrum: Red â†’ Blue (Pure Warm to Pure Cool)
   The entire bar is one continuous spectrum from warmest (left) to coolest (right)
   Position 0: All workspaces + window title (warmest)
   Positions 1-10/11: Status modules (progressively cooler)

   This design dissolves the workspace count constraint - all workspaces share
   the warmest color, and the spectrum flows uninterrupted across the bar.
   Desktop: 11 positions (disk0, disk1 instead of single disk, no battery)
   Laptop: 11 positions (single disk, has battery) */
{{- $numModules := 11 -}}
{{- $script := joinPath .chezmoi.sourceDir ".." "scripts" "generate-spectrum.py" -}}
{{- $output := output "python3" $script (index $c "red") (index $c "blue") (toString $numModules) -}}
{{- $spectrum := $output | trim | splitList "\n" -}}

/* Position 0: Unified left side (all workspaces + window title) */
#workspaces button {
    padding: 0 8px;
    margin: 0;
    background-color: transparent;
    color: #{{ index $spectrum 0 }};
    font-weight: 500;
}

#workspaces button.active {
    color: #{{ index $spectrum 0 }};
    background-color: {{ template "color-hex.tmpl" $c.ui_active_workspace }};
    font-weight: 600;
}

#workspaces button:hover {
    background: {{ template "color-hex.tmpl" $c.ui_hover }};
    background-color: {{ template "color-hex.tmpl" $c.ui_hover }};
    color: {{ template "color-hex.tmpl" $c.green_bright }};
    box-shadow: inherit;
    text-shadow: inherit;
    border: none;
    transition: none;
}

#workspaces button.active:hover {
    background: {{ template "color-hex.tmpl" $c.ui_hover_active }};
    background-color: {{ template "color-hex.tmpl" $c.ui_hover_active }};
    color: {{ template "color-hex.tmpl" $c.green_bright }};
    box-shadow: inherit;
    text-shadow: inherit;
    border: none;
    transition: none;
}

/* Active window title */
#window {
    color: #{{ index $spectrum 0 }};
    font-weight: 400;
}

window#waybar.empty #window {
    color: {{ template "color-hex.tmpl" $c.bg_lighter }};
}

/* Status modules - Perceptually uniform spectrum (LAB interpolation) */
{{- if .is_laptop }}
/* Laptop: 11 positions (single disk, has battery) */
#disk {
    color: #{{ index $spectrum 1 }};
}

#cpu {
    color: #{{ index $spectrum 2 }};
}

#memory {
    color: #{{ index $spectrum 3 }};
}

#backlight {
    color: #{{ index $spectrum 4 }};
}

#pulseaudio {
    color: #{{ index $spectrum 5 }};
}

#bluetooth {
    color: #{{ index $spectrum 6 }};
}

#network {
    color: #{{ index $spectrum 7 }};
}

#custom-weather {
    color: #{{ index $spectrum 8 }};
}

#battery {
    color: #{{ index $spectrum 9 }};
}

#clock {
    color: #{{ index $spectrum 10 }};
    font-weight: 600;
    padding-right: 12px;
}
{{- else }}
/* Desktop: 11 positions (dual disk, no battery) */
#custom-disk0 {
    color: #{{ index $spectrum 1 }};
}

#custom-disk1 {
    color: #{{ index $spectrum 2 }};
}

#cpu {
    color: #{{ index $spectrum 3 }};
}

#memory {
    color: #{{ index $spectrum 4 }};
}

#backlight {
    color: #{{ index $spectrum 5 }};
}

#pulseaudio {
    color: #{{ index $spectrum 6 }};
}

#bluetooth {
    color: #{{ index $spectrum 7 }};
}

#network {
    color: #{{ index $spectrum 8 }};
}

#custom-weather {
    color: #{{ index $spectrum 9 }};
}

#clock {
    color: #{{ index $spectrum 10 }};
    font-weight: 600;
    padding-right: 12px;
}
{{- end }}
/* VPN - Blue (secure connectivity) - integrates visually with network */
#custom-vpn {
    color: {{ template "color-hex.tmpl" $c.blue }};
    padding-left: 0;
    padding-right: 8px;
    margin-left: -6px;
}

/* Consistent hover effects for interactive modules */
#pulseaudio:hover,
#backlight:hover,
#bluetooth:hover,
#network:hover {
    background-color: {{ template "color-hex.tmpl" $c.ui_hover }};
}

/* Tooltip styling */
tooltip {
    background-color: {{ template "color-hex.tmpl" $c.bg_dark }};
    color: {{ template "color-hex.tmpl" $c.fg_primary }};
    border: 1px solid {{ template "color-hex.tmpl" $c.selection }};
    padding: 4px 8px;
    font-size: 12px;
}