theme = "kanagawa-dragon"

[editor]
line-number = "relative"
mouse = false
{{ if .has_gui -}}
shell = ["fish", "-c"]
{{ else -}}
# VPS: Use bash as shell (fish may not be installed)
shell = ["bash", "-c"]
{{ end }}
cursorline = true
true-color = true
rulers = [80]
bufferline = "multiple"
color-modes = true

[editor.cursor-shape]
insert = "bar"
normal = "block"
select = "underline"

[editor.file-picker]
hidden = false

[editor.lsp]
display-messages = true
display-inlay-hints = true
snippets = true
auto-signature-help = true

[editor.indent-guides]
render = true
character = "╎"
skip-levels = 1

[editor.statusline]
left = ["mode", "spinner", "file-name", "file-modification-indicator"]
center = []
right = ["selections", "primary-selection-length", "position", "file-encoding", "file-line-ending", "file-type"]
separator = "│"
mode.normal = "NORMAL"
mode.insert = "INSERT"
mode.select = "SELECT"

[editor.whitespace.render]
space = "none"
tab = "all"
newline = "none"

[editor.whitespace.characters]
space = "·"
nbsp = "⍽"
tab = "→"
newline = "⏎"

# Soft wrap for long lines
[editor.soft-wrap]
enable = true
max-wrap = 25           # Indent wrapped lines for visual clarity
max-indent-retain = 40  # Don't indent more than this
wrap-indicator = "↪ "   # Visual indicator for wrapped lines

# Auto-pairs configuration
[editor.auto-pairs]
'(' = ')'
'{' = '}'
'[' = ']'
'"' = '"'
'`' = '`'
'<' = '>'  # Useful for HTML/XML/Rust generics

# Search configuration
[editor.search]
smart-case = true      # Case-insensitive unless uppercase used
wrap-around = true     # Continue search from beginning/end

# Helix-native keybindings (preserve defaults, minimal custom)
[keys.normal]
space.w = ":w"         # Preserve: write current
space.q = ":q"         # Dismiss: quit current
X = "extend_line_above"  # Extend selection upward
