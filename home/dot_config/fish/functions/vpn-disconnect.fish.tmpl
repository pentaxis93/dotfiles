function vpn-disconnect --description "Disconnect from VPN via systemd service"
    # Semantic: Terminate secure tunnel and restore default route

    if not sudo systemctl is-active --quiet goosevpn.service
        echo "‚ÑπÔ∏è  No active VPN connection"
        return 0
    end

    echo "üîí Disconnecting VPN..."

    # Stop system service (requires sudo)
    sudo systemctl stop goosevpn.service

    if test $status -eq 0
        echo "‚úì VPN disconnected"
    else
        echo "‚úó Failed to disconnect VPN"
        return 1
    end
end