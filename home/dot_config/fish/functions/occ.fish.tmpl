function occ --description "OpenCode connect - check status and attach to babbie"
    echo "Checking babbie server status..."
    ssh babbie "~/.local/bin/ocstatus" | grep -E "(Status|Working Directory|Version|Tailscale)"
    echo ""
    echo "Connecting..."

    if test (count $argv) -gt 0
        # Directory argument provided
        echo "Requesting working directory: $argv[1]"
        oca $argv[1]
    else
        oca
    end
end
