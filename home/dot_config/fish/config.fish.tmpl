# Auto-lock Bitwarden on terminal exit - Security first
# "The wise seal their treasures when departing"
function __bw_auto_lock_on_exit --on-event fish_exit
    if test -n "$BW_SESSION"
        bw lock 2>/dev/null
        set -e BW_SESSION
    end
end
