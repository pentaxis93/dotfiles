#!/usr/bin/env fish
# Example: Password/secret input with hidden text

# Get password input (hidden)
set password (wofi --show dmenu --password --prompt "Enter Password:" --lines 1)

# Exit if cancelled
if test -z "$password"
    exit 0
end

# Use the password (example: pipe to a script)
# echo "$password" | your-auth-script.sh

# For demonstration (DON'T actually log passwords!)
notify-send "Password Input" "Password received (length: "(string length "$password")" chars)"
